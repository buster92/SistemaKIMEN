	<mx:ComboBox x="10" y="36" id="metCombo" dataProvider="{array}"></mx:ComboBox>
	<mx:DateField x="10" y="92" width="120" formatString="DD/MM/YYYY" id="fecha"/>
	<mx:ComboBox x="10" y="148" width="120" id="jornadaCombo">
